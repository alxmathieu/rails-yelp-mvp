<h1> <%= @restaurant.name %> </h1>

<h2>Infos</h2>

<p>Category : <%= @restaurant.category %></p>
<p>Address : <%= @restaurant.address %></p>
<p>Phone number : <%= @restaurant.phone_number %></p>


<h2>Add a review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, :collection => [0, 1, 2, 3, 4, 5] %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<br>
<%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
<%= link_to "See all reviews", restaurant_reviews_path(@restaurant), class: "btn btn-primary" %>

