<div class="restaurant-header" style="
    display:  flex;
    justify-content: flex-end;
">
  <%= link_to "See all reviews", restaurant_reviews_path(@restaurant), class: "btn btn-primary", style: "margin: 30px" %>
</div>
<div class="container">
  <h3> <%= @restaurant.name %> </h3>
  <h4>Infos</h4>
  <p>Category : <%= @restaurant.category %></p>
  <p>Address : <%= @restaurant.address %></p>
  <p>Phone number : <%= @restaurant.phone_number %></p>


  <h4>Add a review for <%= @restaurant.name %></h4>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, :collection => [0, 1, 2, 3, 4, 5] %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
  <%= link_to 'Delete restaurant', restaurant_path(@restaurant),
                    method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  %>
</div>

